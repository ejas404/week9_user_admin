<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/header')%>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body>
    <header>
      <%- include('../partials/navbar')%>
   </header>
   <main class="dash-body d-flex justify-content-center py-5">
      <div class="userdata-container">
        <table class="table">
            <thead>
              <tr>
                <th scope="col">sl no</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Position</th>
                <th></th>
                <th scope="col"><a href="/admin/createUser"><i class="bi bi-person-add"></i> </a></th>
              </tr>
            </thead>
            <tbody>
              <% let k = 0 %>
              <% for(let i=0;i< locals.datas.length;i++) { %>
                <% if (datas[i].position === 'admin') { continue; } %>
              <tr>
                
                <th scope="row"><%= ++k %></th>
                <td><%= datas[i].name %> </td>
                <td><%= datas[i].email %></td>
                <td><%= datas[i].position %></td>
                <td><a href="/admin/deleteuser/<%= datas[i]._id%>"><i class="bi bi-person-dash"></i></a></td>
                <td><a href="/admin/updateuser/<%= datas[i]._id%>"><i class="bi bi-pencil-square"></i></i></a></td>
              </tr>
              <% } %>
             
            </tbody>
          </table>
      </div>
   </main>
   <script src="../someworks/confirm.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>  
</body>
</html>